    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Start",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "start"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Start PL",
            "request": "launch",
            "runtimeArgs": [
                "run",
                "start",
                "--",
                "--locale",
                "pl"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Write Translations",
            "request": "launch",
            "runtimeArgs": ["run", "docusaurus", "write-translations"],
            "runtimeExecutable": "npm",
            "type": "node"
        }
    ]
}